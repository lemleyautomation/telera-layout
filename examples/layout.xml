<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../layout.dtd" type="application/xml-dtd"?>

<!-- https://raw.githubusercontent.com/lemleyautomation/telera-layout/main/layout.dtd -->

<page name="Main">
    <reusable name="layout expand">
        <element-config>
            <width-grow min="2" />
            <height-grow />
        </element-config>
    </reusable>

    <reusable name="content background color">
        <element-config>
            <color is="rgb(90,90,90)" />
        </element-config>
    </reusable>

    <reusable name="header button">
        <element>
            <element-config>
                <padding-top is="8" />
                <padding-bottom is="8" />
                <padding-left is="16" />
                <padding-right is="16" />
                <color is="rgb(140,140,140)" />
                <radius-all is="5" />
                <hovered>
                    <border-color is="black" />
                    <border-all is="2" />
                </hovered>
            </element-config>

            <text-element>
                <text-config>
                    <font-size is="16" />
                    <line-height is="20" />
                    <color is="white" />
                </text-config>
                <dyn-content from="label" />
            </text-element>
        </element>
    </reusable>

    <reusable name="sidebar button">
        <element-config>
            <width-grow />
            <padding-all is="16" />
        </element-config>
    </reusable>

    <reusable name="drop down menu item">
        <element>
            <element-config>
                <padding-all is="16" />
            </element-config>
            <text-element>
                <text-config>
                    <font-size is="16" />
                    <color is="white" />
                </text-config>
                <dyn-content from="label" />
            </text-element>
        </element>
    </reusable>

    <element id="outer container">
        <element-config>
            <id is="outer container" />
            <use name="layout expand"></use>
            <color is="rgb(43,41,51)" />
            <direction is="ttb" />
            <padding-all is="16" />
            <child-gap is="16" />
        </element-config>

        <element>
            <element-config>
                <id is="header bar" />
                <use name="content background color"></use>
                <radius-all is="8" />
                <width-grow/>
                <height-fixed at="60" />
                <padding-top is="8" />
                <padding-bottom is="8" />
                <padding-left is="16" />
                <padding-right is="16" />
                <child-gap is="16" />
                <align-children-y to="center" />
            </element-config>


            <element>
                <element-config>
                    <id is="file button" />
                    <padding-top is="8" />
                    <padding-bottom is="8" />
                    <padding-left is="16" />
                    <padding-right is="16" />
                    <color is="rgb(140,140,140)" />
                    <radius-all is="5" />
                    <hovered>
                        <border-color is="black" />
                        <border-all is="2" />
                    </hovered>
                </element-config>

                <text-element>
                    <text-config>
                        <font-size is="16" />
                        <line-height is="20" />
                        <color is="white" />
                    </text-config>
                    <content>File</content>
                </text-element>

                <!-- TODO: add floating dropdown menu -->
            </element>

            <use name="header button">
                <set-text local="label" to="Edit" />
            </use>
            <element>
                <element-config>
                    <width-grow />
                </element-config>
            </element>
            <use name="header button">
                <set-text local="label" to="Upload" />
            </use>
            <use name="header button">
                <set-text local="label" to="Media" />
            </use>
            <use name="header button">
                <set-text local="label" to="Support" />
            </use>
        </element>

        <element>
            <element-config>
                <id is="lower content" />
                <child-gap is="16" />
                <use name="layout expand"></use>
            </element-config>

            <element>
                <element-config>
                    <id is="sidebar" />
                    <use name="content background color"></use>
                    <direction is="ttb" />
                    <padding-all is="16" />
                    <child-gap is="8" />
                    <width-fixed at="250" />
                    <height-grow />
                    <radius-all is="8" />
                </element-config>

                <list src="documents">
                    <get-text local="title" from="title" />
                    <get-bool local="selected" from="selected_document" />
                    <get-event local="Clicked" from="Clicked" />

                    <element if="selected">
                        <element-config>
                            <use name="sidebar button"></use>
                            <color is="rgb(120,120,120)" />
                            <radius-all is="8"/>
                            <clicked>
                                <border-color is="white" />
                                <border-all is="2" />
                            </clicked>
                        </element-config>
                        <text-element>
                            <text-config>
                                <font-size is="20" />
                                <color is="black" />
                            </text-config>
                            <dyn-content from="title" />
                        </text-element>
                    </element>

                    <element if-not="selected">
                        <element-config>
                            <use name="sidebar button"></use>
                            <hovered>
                                <color is="rgb(120, 120, 120)" />
                            </hovered>
                            <radius-all is="8" />
                            <clicked emit="Clicked">
                                <border-color is="white" />
                                <border-all is="2" />
                            </clicked>
                        </element-config>
                        <text-element>
                            <text-config>
                                <font-size is="20" />
                                <color is="black" />
                            </text-config>
                            <dyn-content from="title" />
                        </text-element>
                    </element>
                </list>
            </element>

            <element>
                <element-config>
                    <id is="main content" />
                    <use name="content background color"></use>
                    <scroll vertical="true" />
                    <direction is="ttb" />
                    <child-gap is="16" />
                    <padding-all is="16" />
                    <use name="layout expand"></use>
                    <radius-all is="8" />
                </element-config>

                <text-element>
                    <text-config>
                        <font-size is="24" />
                        <line-height is="28" />
                        <color is="white" />
                    </text-config>
                    <dyn-content from="selected title" />
                </text-element>

                <text-element>
                    <text-config>
                        <font-size is="24" />
                        <line-height is="28" />
                        <color is="white" />
                    </text-config>
                    <dyn-content from="selected contents" />
                </text-element>
            </element>
        </element>
    </element>
</page>